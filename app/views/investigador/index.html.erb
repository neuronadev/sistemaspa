        <div class="main__cards">
        <div class="card">
            <div class="card__header">
            <div class="card__header-title text-light">Productos (últimos registros) 
                <a href="#" class="card__header-link text-bold"><%= link_to("Ver todo", actividades_path, data:{turbolinks:false}) %></a>
            </div>
            </div>

            <div class="card__main">
                <% @actividades.each do |a| 
                    producto = Producto.find(a.producto_id) 
                    autores = a.autores.order(:posicion)
                    @str = ""
                    idreporta = ''
                    i=0
                    autores.each do |p|
                        if i > 0  
                          simbolo = ", " 
                        else
                          simbolo = "" 
                        end
                         if !p.firma.present?
                             @str = @str + simbolo + (p.persona.paterno||"") + "," + (p.persona.nombre||"")
                         else
                             @str = @str + simbolo + (p.firma||"")
                         end     
                       i = i+1
                    end
                    mostrar = 'S'
                    if producto.prodgrupo.clave == 'ACTIVIDAD' && (current_usuario.rol == 'I' || current_usuario.rol == 'C')
                        mostrar = 'N'
                    end

                   if mostrar == 'S' 
                %>
                        <div class="card__row">
                            <div class="card__icon"><i class="fas fa-book"></i></div>
                            <div class="card__time">
                            <div><%= a.producto.prodgrupo.nomgrupo %></div>
                            </div>
                            <div class="card__detail">
                            <div class="card__source text-bold"> <%= link_to(a.titulo, actividad_path(a.id), data:{turbolinks:false}) %> </div>
                            <div class="card__description"><%= @str %></div>
                             <div class="card__note"></div>
                            </div>
                        </div>
                   <% end %>      
                <% end %>
                       
            </div>
        </div>
