
<% if @tipo == 'A' %>  
        <% if current_usuario.evaluador == 'A' || current_usuario.evaluador == 'B' %>  
                <div class="card mt-md-3">
                        <div class="card-body">  
                                <div class="row ">
                                
                                        <div id="datainvest" class="<%= current_usuario.evaluador == 'A' ? 'col-6' : 'col-12' %> border-left border-top border-right border-bottom" style="overflow: scroll; height:600px;">
                                                <div class="d-flex justify-content-center font-weight-bold">Investigadores</div>        
                                                <%= render "list_invest" %>
                                        </div>  
                                        <% if current_usuario.evaluador == 'A' %>  
                                                <div class="col-5 border-left border-top border-right border-bottom  ml-md-5" style="overflow: scroll; height:600px;">
                                                        <div class="d-flex justify-content-center font-weight-bold">Técnicos</div>
                                                        <%= render "list_tecnicos" %> 
                                                </div>
                                        <% end %> 
                                </div>
                        </div>
                </div>
                <div class="card mt-md-3">
                        <div class="card-body">  
                                <div class="row" >
                                
                                        <div class="col-12 border-left border-top border-right border-bottom" style="overflow: scroll; height:600px;">
                                                <div class="d-flex justify-content-center font-weight-bold">Academicos validados</div>       
                                                  <div id="acvalidados"> 
                                                     <%= render "list_ok" %>
                                                  </div>   
                                        </div>  
                                </div>
                        </div>
                </div>
        <% end %>

        <% if current_usuario.evaluador == 'C' %>
        <div class="card mt-md-3">
                <div class="card-body">  
                <div class="row ">
                
                        <div class="col-12 border-left border-top border-right border-bottom  ml-md-5">
                                <div class="d-flex justify-content-center font-weight-bold">Técnicos</div>
                                <%= render "list_tecnicos" %> 
                        </div>

                </div>     
                </div>
        </div>
        <% end %>
<% end %> 

<% if @tipo == 'I' %>
        <h5> Producción Académica de Investigadores 2021</h5>
        <div data-controller = "valproducto">     
            <%= render "list_todo" %>
        </div> 
<% end %>  
<% if @tipo == 'T' %>
        <h5>Producción Académica de Técicos 2021</h5>
        <div data-controller = "valproducto">     
            <%= render "list_todo" %>
        </div> 
<% end %>  

<% if  @scroll.to_i > 0 %>

        <script>
                
                document.addEventListener("DOMContentLoaded", function(event) {
                        var pc = document.getElementById("trval_<%= @scroll %>").offsetTop;
                        document.getElementById("datainvest").scrollTop = pc;
                        var tr = document.getElementById("trval_<%= @scroll %>")
                        tr.style.backgroundColor='#f5b7a9'; 
                        setTimeout( ()=> {tr.style.backgroundColor=''},2*1000)                        
                         
                });
        </script>

<% end %>