 <div class="d-flex justify-content-center">
      <% if a.estado == 'C' %> 
                  <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                        <span class="badge bg-primary font-weight-bold"> <i class="fas fa-file-signature"></i> Validar </span>
                  <% end %> 
      <% end %>
      <% if a.estado == 'S' %> 
                  <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                        <i class="fas fa-check-double text-success"></i> <span class="text-success"> <small> Validado </small> </span>
                  <% end %> 
      <% end %>

      <% if ['A','U'].include? a.estado %>
            <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                        <span class="badge bg-info font-weight-bold"> Ver producto </span>
            <% end %>
      <% end %>

      <% if ['G','D'].include? a.estado %>        

            <%
            etapa_val = a.valetapas.where(activo:'SI').last
            if etapa_val.nil?
               etapa_val = ''
            end
            %>
            <% if etapa_val.etapa == 'SA' %>
                  <% if a.estado == 'G' %>
                        <small>
                        <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                              <span class="badge bg-warning"><i class="fas fa-user-edit"></i>Enviado a correcci√≥n</span>
                        <% end %> 
                        </small>
                  <% end %>
                  <% if a.estado == 'D' %>
                        <% if a.producto_id == 82 %>  
                              <%  autores = Autor.where(actividad_id:a.id, persona_id:@persona_id).first  %>
                              <% if autores.aplicar == 'N' %>    
                                     <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                                         <i class="fas fa-user-times text-danger"></i> <span class="text-danger"> <small> No considerar </small> </span>
                                     <% end %> 
                              <% else %> 
                                      <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                                          <i class="fas fa-check-double text-success"></i> <span class="text-success"> <small> Validado </small> </span>
                                     <% end %> 
                              <% end %> 
                        <% else %>
                                 <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                                      <i class="fas fa-user-times text-danger"></i> <span class="text-danger"> <small> No considerar </small> </span>
                                 <% end %> 
                        <% end %> 
                  <% end %>   
            <% end %>
            <% if etapa_val.etapa == 'CR' %>
                   <% if a.estado == 'G' %>
                              <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                                      <span class="badge bg-info font-weight-bold"> Ver producto </span>
                              <% end %>
                   <% end %>
                   <% if a.estado == 'D' %>
                              <%= link_to "#", data:{action:'click->valproducto#showTargetInfo', 'valproducto-trval-param':@trval, 'valproducto-tritem-param':@tritem } do %>
                                    <span class="badge bg-primary font-weight-bold"> <i class="fas fa-file-signature"></i> Validar </span>
                              <% end %>
                   <% end %>            
            <% end %>

      <% end %>
</div>      