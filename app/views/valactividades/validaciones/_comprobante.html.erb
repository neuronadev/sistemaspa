<div class="row">
    <div class="col">
       
    <% if [22,39,82,83].include? actividad.producto_id && ( ['P','V'].include? actividad.fuente ) %>
        <% if [22,39].include? actividad.producto_id %>
                <% if actividad.enlacedoc.attached? && actividad.fuente == 'V' %>
                    <div class="d-flex ">
                        <%= link_to rails_blob_path(actividad.enlacedoc, disposition: 'inline', target: '_blank') do %>
                               <small> <i class="fas fa-file-pdf"></i> Comprobante </small>
                        <% end %>
                    </div>  
                <% else %>
                  <div class="d-flex ">
                     <% actividad.documentos.each do |d|%>
                          <div id="doc<%= d.id %>" class="ml-md-3">
                              <small><%= link_to "Comprobante", rails_blob_path(d, disposition: "inline"), { target: '_blank' } %></small>
                          </div>
                     <% end %>   
                   </div>  
                <% end %>      
        <% end %>
        <% if actividad.producto_id == 82 
            autor = Autor.where(actividad_id:actividad.id,persona_id:current_usuario.persona_id).first
        %>
            <% if autor.posgradoc.attached? %> 
                <div class="d-flex">
                        <%= link_to rails_blob_path(autor.posgradoc, disposition: 'attachment', target: '_blank') do %>
                                <div><small><i class="fas fa-file-pdf"></i> <%= autor.posgradoc.filename %></small></div>
                        <% end  %>
                </div>   
            <% end %>    
        <% end %>
        <% if actividad.producto_id == 83 %>
            <div class="d-flex flex-column">
                    <%= link_to rails_blob_path(actividad.tesisdoc, disposition: 'attachment', target: '_blank') do %>
                            <div><small><i class="fas fa-file-pdf"></i> <%= actividad.tesisdoc.filename %></small></div>
                    <% end  %>
                    <%= link_to rails_blob_path(actividad.tesisportada, disposition: 'attachment', target: '_blank') do %>
                            <div><small><i class="fas fa-file-pdf"></i> <%= actividad.tesisdoc.filename %></small> </div>
                    <% end  %>
                    <%= link_to rails_blob_path(actividad.tesiscarta, disposition: 'attachment', target: '_blank') do %>
                            <div> <small> <i class="fas fa-file-pdf"></i> <%= actividad.tesisdoc.filename %> </small> </div>
                    <% end  %>
            </div> 
        <% end %> 

    <% else %>
        
                    <% if actividad.documentos.attached? %> 
                        <% actividad.documentos.each do |d|%>
                            <div id="doc<%= d.id %>" class="ml-md-3">
                                <%= link_to  rails_blob_path(d, disposition: "inline"),  target: '_blank' do  %>
                                       <small><i class="fas fa-file-pdf text-primary"></i> Comprobante</small>
                                <% end %>
                            </div>
                        <% end %>  
                    <% else %>
                        <small class="text-danger font-italic"> No se anexo ning√∫n comprobante</small>      
                    <% end %>  
    <% end %>
   <div>
</div>    