<div class="row">
 <div class="col-12">
   <strong>Perfil de usuario</strong>
 </div> 
</div>
<hr>



<div class="d-flex justify-content-center">
 <div class="card align-items-center" style="width: 30rem;">
    <% if  current_usuario.imagen.present?  %> 
        <%= image_tag current_usuario.imagen.variant(resize_to_fit: [100, 100]), class:"rounded-circle img-fluid" %>
    <% else %>
       <div class="w-50">
           <%= image_pack_tag 'avatar.png', class:"card-img-top rounded-circle img-fluid" %>
        </div>
    <% end %>
    <div class="card-block text-center">
      <p class="card-text"><%= @persona.academico.nivel.clavenivel %> <%= (@persona.paterno||'') + " " + (@persona.materno||'') + " " + (@persona.nombre||'') %></p> 
      <p class="card-text"><%= @persona.academico.red.nomred %></p>
    </div>
   
 </div>
 
</div>
<div class="d-flex justify-content-center">  <%= link_to("Editar", edit_perfil_path(current_usuario.persona_id) ) %>  </div>