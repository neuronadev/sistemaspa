
<% @cursos.each do |c| %>

    <tr> 
        <td> 
            <% if c.producto.id == 83 %>
                 Tesis
            <% end %>
            <% if c.producto.id == 82 %>
                 Curso
            <% end %>
        
        </td>  
        <td>
             <% if c.producto.id == 83 %>
                   <%= link_to c.tesista.acta+' - '+c.titulo, posgrado_path(c.id) %>
             <% else %>
                 <%= link_to c.titulo, posgrado_path(c.id) %>
              <% end %>   
          </td>
        <td>
            <% if c.producto.id == 82 %>
                 <%= c.curso.tipocurso.nomtipocurso %>
            <% end %>
            <% if c.producto.id == 83 %>
                 <%= c.tesista.nivelestudio.nomnivel %>
            <% end %>   
        </td>
        <td>

            <% if c.estado == 'U' %>
                   <span class="badge bg-warning text-dark">En validaciÃ³n</span>
            <% end %> 
             <% if c.estado == 'C' || c.estado == 'S' || c.estado == 'D' %>
                   <span class="badge bg-success text-white-50"> <i class="fas fa-check-double text-white-50 fa-sm"></i> Validado</span>
            <% end %> 
        </td>
        
    </tr>

<% end %>