<div class="row">
     <div class="col-12 text-success">
          <i class="fa-solid fa-list"></i> Ver actividades sustantivas...
              <div class="row mt-1 ms-3" id="">
                        
              </div>
      </div>
</div>

<div class="row">    
   <div class="col p-2">
         <p class="text-center text-secondary">Actividades adicionales</p>
   </div>
</div>



<div class="row bg-body rounded-3 mt-1">    
   <div class="col-12">
            <% @adicionales.each do |item| %>
                <div class="row p-2 border-bottom">
                    <div class="col-1 text-center align-middle" >  <%= item.id %>  </div>
                    <div class="col-4 align-middle" > <%= item.producto.descripcion %></div>
                    <div class="col-6 align-middle" style="text-align: justify;"> 
                              <div><%= item.titulo %></div>
                              <div class="text-primary cursor-pointer" data-action="click->tecnico#detalle" data-tecnico-idprod-param = "<%= item.id %>" > Ver producto</div>
                    </div>
                    <div class="col-1 align-middle" style="text-align: justify;"> 
                        <%= render "estado_producto", item:item %> 
                    </div>

                    <div class="row p-2" id="div_detalle_<%= item.id %>" style="display:none;">
                        <div class="col-1"></div>
                        <div class="col-10 rounded border border-success bg-light" id="data_producto_<%= item.id %>">DATA</div>
                        <div class="col-1"></div>
                    </div>  
                   
                    

                </div>  
                
            <% end %>
   </div>     
</div>   