
    <div class="card">
        <div class="card-body">
             <div class="row justify-content-center">
                <div class="col-11">  
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="col-4"><div class="d-flex justify-content-center">Producto</div></th>
                                <th class="col-7"><div class="d-flex justify-content-center">Descripci√≥n</th>
                            </tr>
                        </thead>
                        <tbody> 
                            <% @productos.where(id:[1,2,5,6,7]).each do |p| %>
                                <% if p.estado == 'A' %>
                                    <tr class="" data-action="click->cattab#form" data-cattab-url-param="<%= new_actividades_actividad_path(:item=>p.id) %>" role="button" >
                                        <td class="col-4 align-middle"> <%=  p.descripcion %>  </td>
                                        <td class="col-7 align-middle"> <div class="d-flex" style="text-align: justify;"> <%= p.concepto %> </div> </td>

                                    </tr>    
                                 <% else %>  
                                      <% if (p.id == 81 || p.id == 85) && current_usuario.email == 'antonio.francisco@inecol.mx' %>  
                                            <tr class="" data-action="click->cattab#form" data-cattab-url-param="<%= new_actividades_actividad_path(:item=>p.id) %>" role="button" >
                                                <td class="col-4 align-middle"> <%=  p.descripcion %>  </td>
                                                <td class="col-7 align-middle"> <div class="d-flex" style="text-align: justify;"> <%= p.concepto %> </div> </td>
                                            </tr>    
                                      <% else %>
                                            <tr class="text-secondary" role="button" >
                                                <td class="col-4 align-middle"> <%=  p.descripcion %> <span class="text-success fst-italic">Estos productos los captura el area correspondiente.</span> </td>
                                                <td class="col-7 align-middle"> <div class="d-flex" style="text-align: justify;"> <%= p.concepto %> </div> </td>
                                            </tr>      
                                      <% end %>   
                                <% end %>    

                            <% end %>
                        </tbody>    
                    </table>    
                </div>
             </div>   
        </div>    
    </div>    
