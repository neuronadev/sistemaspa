<script>
$('body').on('keypress','.porcentaje', function(evt){
    var $txtBox = $(this);
         var charCode = (evt.which) ? evt.which : evt.keyCode
         if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 46)
             return false;
         else {
             var len = $txtBox.val().length;
             var index = $txtBox.val().indexOf('.');
             if (index > 0 && charCode == 46) {
               return false;
             }
             if (index > 0) {
                 var charAfterdot = (len + 1) - index;
                 if (charAfterdot > 3) {
                     return false;
                 }
             }
         }
         return $txtBox;
  }); 


$( "form#proyectos" ).submit(function( event ) {
     var sumaPorc = sumporc();
     
     if ( sumaPorc != 100.00 ){
          alert("La suma de los porcentajes de participaci√≥n debe ser 100");
          return false;
     }else{
         return true;   
    }
     
});

 function sumporc(){
    var totalp = 0;
    $(".porcentaje").each(function(){
          if(!isNaN(this.value) && this.value.length!=0) {
              totalp += parseFloat(this.value);
           }
    });
    total = totalp.toFixed(2);
    return total;
}

</script>