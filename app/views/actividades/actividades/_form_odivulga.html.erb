<%= form_with model:[:actividades, actividad] do |form| %>
    <%= render "form_inputs_com", form:form %>
    <div class="alert alert-danger" role="alert">
         Eventos de divulgación (por ejemplo casa abierta, fometo, etc.) llevados por la Oficina de Enlace, será esta misma área quién se encargará de registrarlos.
    </div>
    <div class="row mb-1">
                  <div class="col-md-2 d-flex justify-content-end"> 
                     <%= form.label :titulo, "Nombre de la actividad:", class:"form-label " %>
                  </div>
                  <div class="col-md-6 d-flex justify-content-start">
                     <%= form.text_field :titulo, class:"form-control" %>
                  </div>
    </div>
    <div class="row mb-1">
                  <div class="col-md-2 d-flex justify-content-end"> 
                     <%= form.label :fechapub, "Fecha de la actividad:", class:"form-label " %>
                  </div>
                  <div class="col-md-2 d-flex justify-content-start">
                     <%= form.date_field :fechapub, class:"form-control" %>
                  </div>
    </div>
    
    <%= form.fields_for :divulgacion do |div_form| %>
        <div class="row mb-1">
                  <div class="col-md-2 d-flex justify-content-end"> 
                         <%= form.label :tipodivulgacion_id, "Tipo actividad:", class:"form-label " %>
                  </div>
                  <div class="col-md-4 d-flex justify-content-start">
                         <%=  div_form.select :tipodivulgacion_id, Tipodivulgacion.all.pluck(:nomtipodivulgacion,:id), { prompt:'-- Seleccione una opcion--'},class:"form-control" %>
                  </div>
        </div>
    <% end %>
    <%= render "doc_comprobante", form:form %>
    <%= render "red_acad", form:form  %>
    <div class="row">
                <div class="col-md-2 d-flex justify-content-end"> 
                            Participantes:
                </div>
                <div class="col d-flex justify-content-start">
                      <%= render "form_autores", form:form, swcorr:'N' %>
                </div>
    </div>

    <div class="row d-flex justify-content-end mt-4">
                <div class="col-3">
                    <div class="row">
                        <div class="col"><%= form.submit "Enviar información", class:'btn btn-success' ,data: { confirm: '¿Desea continuar?', disable_with: "Enviando información, un momento..." }  %></div>
                        <div class="col"><%= render "actividades/actividades/items/btncancel" %></div>
                    </div>
                </div> 
   </div>
<% end %>