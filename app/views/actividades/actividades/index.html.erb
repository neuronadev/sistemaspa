
<div class="card">

   <div class="card-body">
         <h5>Producción 2021</h5>

         <table class="table table-sm">
              <thead>
                  <tr >
                      <th scope="col" style="width: 5%">Folio</th>
                      <th scope="col" style="width: 25%">Producto</th>
                      <th scope="col" style="width: 45%">Título</th>
                      <th scope="col" style="width: 5%">Comprobante</th>
                      <th scope="col" style="width: 5%">Vo.Bo.</th>
                      <th scope="col" style="width: 5%">CR</th>
                      <th scope="col" style="width: 5%">SA</th>
                  </tr>
              </thead>

              <tbody>
                  <% @actividades.each do |a| %>
                     <tr>
                         <td> <%= a.id %> </td>
                         <td> <span class="d-inline-block" data-toggle="tooltip" data-placement="top" title="<%= a.producto.descripcion %>"><%= a.producto.descripcion %></span> </td>
                         <td> <%= link_to a.titulo, actividades_actividad_path(a.id) %> </td>
                         <td> 
                               <% if a.documentos.attached? %> 
                                    <% a.documentos.each do |d|%>
                                        <%= link_to rails_blob_path(d, disposition: "attachment"), { target: '_blank' } do %>
                                            <i class="fas fa-file-pdf"></i>
                                        <% end %>
                                    <% end %>  
                                <% else %>
                                      <%= link_to updoc_actividades_actividad_path(a.id) do %>    
                                         <i class="fas fa-upload text-danger"></i> <small class="text-danger">Comprobante</small>
                                      <% end %>   
                               <% end %>   
                         </td>
                         <td>
                             <% if a.estado == 'A' %>
                                  <%= link_to validar_path(a,'user'),  data:{confirm:"¿Desea validar el registro? Al aceptar no podrá hacer cambios. Asegurarse de la correcta categorización, ver Cap VIII, 8.IV lineamientos", disabled_with: "Enviando.."} do %>
                                    <i class="fas fa-check-circle text-primary"></i>
                                  <% end %>
                             <% else %> 
                                    <i class="fas fa-check-circle text-secondary"></i>
                             <% end %>   
                         </td>
                         <td> </td>
                         <td> </td>
                         <td> </td>
                     <tr> 
                  <% end %>
              </tbody>

         </table> 

   </div>

</div>

