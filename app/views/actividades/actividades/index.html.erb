
<div class="card">

   <div class="card-body">
         <h5>Producción 2021</h5>

         <table class="table table-sm ">
              <thead>
                  
                  <tr >
                      <th scope="col" style="width: 5%"><div class="d-flex justify-content-center">Folio</div></th>
                      <th scope="col" style="width: 20%"><div class="d-flex justify-content-center"> Producto</div></th>
                      <th scope="col" style="width: 2%"></th>
                      <th scope="col" style="width: 40%"><div class="d-flex justify-content-center"> Título</div></th>
                      
                      <th scope="col" style="width: 5%"><div class="d-flex justify-content-center"> Vo.Bo.</div></th>
                      <th scope="col" style="width: 5%"><div class="d-flex justify-content-center"> Coor. Red</div></th>
                      <th scope="col" style="width: 6%"><div class="d-flex justify-content-center"> Sec. Acad</div></th>
                  </tr>
              </thead>

              <tbody>
                 
                  <% @actividades.each do |a| %>
                     <tr>
                         <td> <div class="d-flex justify-content-center"> <%= a.id %> </div> </td>
                         <td> <span class="d-inline-block" data-toggle="tooltip" data-placement="top" title="<%= a.producto.descripcion %>"><%= a.producto.descripcion %></span> </td>
                         <td>
                                <% if a.documentos.attached? %> 
                                   <div class="d-flex justify-content-center">
                                      <% a.documentos.each do |d|%>
                                        <%= link_to rails_blob_path(d, disposition: "attachment"), { target: '_blank' } do %>
                                                <i class="fas fa-file-pdf"></i>  <small class="text-muted"> Comprobante</small>
                                        <% end %>
                                      <% end %>  
                                    </div>  
                                <% else %>
                                    <%= link_to updoc_actividades_actividad_path(a.id), data:{turbolinks:false} do %>    
                                       <div class="d-flex justify-content-center"> <i class="fas fa-upload text-danger"></i>  <small class="text-danger"> Comprobante</small> </div>
                                    <% end %>   
                                <% end %> 
                         </td>
                         <td> <div class="d-flex justify-content-left"> 
                                   <%= link_to a.titulo, actividades_actividad_path(a.id), data:{turbolinks:false}, class:"text-primary" %>
                               </td>
                         
                         <td>
                           <div class="d-flex justify-content-center"> 
                                <% if a.estado == 'A' %>
                                    <%= link_to validar_path(a,'user'),  data:{confirm:"¿Desea validar el registro? Al aceptar no podrá hacer cambios. Asegurarse de la correcta categorización, ver Cap VIII, 8.IV lineamientos", disabled_with: "Enviando.."} do %>
                                        <i class="fas fa-check-circle text-primary"></i>
                                    <% end %>
                                <% else %> 
                                        <i class="fas fa-check-circle text-secondary"></i>
                                <% end %>   
                            </div>    
                         </td>
                         
                         <%= render "navs/col_validacion", activ:a %>
                        
                     <tr> 
                  <% end %>
              </tbody>

         </table> 

   </div>

</div>

