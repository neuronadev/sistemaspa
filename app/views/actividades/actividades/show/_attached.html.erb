               <div class="d-flex justify-content-center">
                       <%= link_to rails_blob_path(autor.posgradoc, disposition: 'attachment', target: '_blank') do %>
                            <div><i class="fas fa-file-pdf"></i>  <small class="text-muted"> Comprobante</small></div>
                       <% end  %>
               </div>   
           <% end %>    
     <% end %>
     <% if a.producto_id == 83 %>
         <div class="d-flex flex-column justify-content-center">
                <%= link_to rails_blob_path(a.tesisdoc, disposition: 'attachment', target: '_blank') do %>
                        <div class="justify-content-center ml-1"><i class="fas fa-file-pdf"></i> <small class="text-muted"> Acta</small></div>
                <% end  %>
                <%= link_to rails_blob_path(a.tesisportada, disposition: 'attachment', target: '_blank') do %>
