                <% end  %>
        </div> 
     <% end %> 

<% else %>
    <% if a.documentos.attached? %> 
        <div class="d-flex justify-content-center">
            <% a.documentos.each do |d|%>
                <%= link_to rails_blob_path(d, disposition: "attachment"), { target: '_blank' } do %>
                        <i class="fas fa-file-pdf"></i>  <small class="text-muted"> Comprobante</small>
                <% end %>
            <% end %>  
        </div>  
    <% else %>
        <div class="d-flex justify-content-center">
            <%= link_to updoc_actividades_actividad_path(a.id), data:{turbolinks:false} do %>    
