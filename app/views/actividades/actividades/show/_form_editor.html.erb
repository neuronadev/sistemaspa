    <div class="row">
         <div class="col-md-2 d-flex justify-content-end fw-bold"> 
               Título:
         </div>
         <div class="col d-flex justify-content-start">
               <%= actividad.titulo %>
         </div>
    </div>
    <div class="row">
         <div class="col-md-2 d-flex justify-content-end fw-bold"> 
               Año:
         </div>
         <div class="col d-flex justify-content-start">
              <%= actividad.anio %>
         </div>
    </div>
    
    
    <div class="row">
            
             <div class="mb-3 col-md-4">
                <label class="font-weight-bold">Tipo editor:</label>
                <div>
                    
                     
                        <%  @tipoed = Tipoeditor.find( @actividad.editor.tipoeditorid) %>
                        <%=  @tipoed.nomtipoeditor %>
                </div> 
             </div> 

             <div class="mb-3 col-md-5">
                <label class="font-weight-bold">Nombre de la revista o libro:</label>
                <div><%= actividad.editor.medio %></div> 
             </div>   
             <div class="mb-3 col-md-3">
                <label class="font-weight-bold">ISBN o ISSN:</label>
                <div><%= actividad.editor.codigo %></div> 
             </div>   
             <div class="mb-3 col-md-3">
                <label class="font-weight-bold">Nombre de la editorial:</label>
                <div><%= actividad.editor.editorial %></div> 
                
             </div> 
             <div class="mb-3 col-md-4">
                <label class="font-weight-bold">Lugar de publicación (país o ciudad):</label>
                <div><%= actividad.editor.pais %></div> 
             </div> 
             <div class="mb-3 col-md-3">
                <label class="font-weight-bold">Ambito:</label>
                <div><%= actividad.editor.ambito.nomambito %></div> 
                
             </div>  
                 
    </div>    
    <%= render "actividades/actividades/show/comprobante", actividad:@actividad %>
    <%= render "actividades/actividades/show/autoria", actividad:@actividad, swcorr:'N' %>