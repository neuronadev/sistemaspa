  <div class="row">
        <div class="mb-3 col-md-12">
               <label class="fw-bold">Título:</label>
               <div><%= @actividad.titulo %></div>
         </div>  
         <div class="mb-3 col-md-3">
               <label class="fw-bold">Año:</label>
               <div><%= @actividad.anio %></div>
         </div>  
         <div class="mb-3 col-md-3">
               <label class="fw-bold">Monto:</label>
               <div><%= number_to_currency(@actividad.monto) %></div>
         </div> 
         <div class="mb-3 col-md-3">
               <label class="fw-bold">Responsable:</label>
               <div><%= reporta(@actividad.personaid) %></div>
         </div> 
    </div>   

<div class="row mb-2 fw-bold">
  Participantes
</div>

 <div class="row">
         <div class="col-md-3">
               <div class="fw-bold">Nombre</div>
         </div>  
         <div class="col-md-2">
               <div class="fw-bold">Porcentaje</div>
         </div>  
</div>  



<%
 @total_porc = 0.0  
 @actividad.autores.each do |a| %>
       <div class="row">
         <div class="mb-1 col-md-3">
               <div><%= (a.autornom||'') + ' ' + (a.autorap||'') %></div>
         </div>  
         <div class="mb-1 col-md-2">
               <div><%= a.porcentaje %></div>
         </div>  
       </div>  
<%  @total_porc +=  a.porcentaje
  end %>   

 <div class="row">
         <div class="col-md-3">
         </div>  
         <div class="col-md-2">
               <div class="fw-bold"><%=  @total_porc %></div>
         </div>  
</div>
