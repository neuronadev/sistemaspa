            </div>

            <div class="col-3">
                <%= form.text_field :autorap, placeholder:'(apellidos)', autocomplete:'off', class:'autorap border-0 p-1 col-12 shadow-none bg-light rounded', 'data-action':'keyup->autores#search keypress->autores#kEnter'  %> 
