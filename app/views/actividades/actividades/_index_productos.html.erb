<%= nomseccion('Productos Académicos', 'Periodo 2022') %>
<div class="container p-2 d-flex justify-content-center" data-controller="modal modalalert">
     <div class="col-11">
          <div class="row border-bottom headlist fw-bold">
               <div class="col-1 d-flex justify-content-center">
                    Folio
               </div>
               <div class="col-3 d-flex justify-content-center">
                    Producto
               </div>
               <div class="col-6 d-flex justify-content-center">
                    Nombre del producto
               </div>
               <div class="col d-flex justify-content-center">
                  Estado validación
               </div>
          </div>

          <div class="row">
               <div class="col"> 
                         <% if @actividades.any? %>
                                   <% @actividades.each do |a| %>
                                        <% if current_usuario.rol == 'I' || current_usuario.rol == 'C' %>  
                                             <% if a.producto.prodgrupo_id != 29 %>
                                                  <%= render "actividades/actividades/items/prod_fila", a:a %>   
                                             <% end %>
                                        <% else %>     
                                                  <%= render "actividades/actividades/items/prod_fila", a:a %>   
                                        <% end %>
                                   <% end %>          
                          <% else %>
                                   <div class="row border-bottom mt-2">
                                        <div class="col-10 d-flex justify-content-start  align-self-center">
                                             No hay registros
                                        </div>
                                   </div>
                         <% end %>
               </div>  
          </div>
          <div><%= render 'modal_alert' %></div>
     </div>     
</div>