
 <div class="row">    
    <div class="col-md-4"></div>
    <div class="col-md-4  d-flex align-items-center " style="height: 100vh">
                <div class="row d-flex align-items-center shadow-lg p-3 mb-5 bg-body rounded-3" style="height: 50vh">                 
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: {class:"form form-login"}) do |f| %>
                               <div class="d-flex justify-content-center"> 
                                     <i class="fa-solid fa-circle-user fa-4x text-secondary"></i>
                               </div>
                               <div class="row">
                                      <div class="mb-3">
                                        <label class="form-label">Usuario:</label>
                                        <input id="usuario_email" name="usuario[email]" type="email" value="" class="form-control" placeholder="Email" required>
                                      </div>

                                      <div>
                                        <label class="form-label" >Password:</label>
                                        <input id="usuario_password" name="usuario[password]" type="password" class="form-control" placeholder="Password" required>
                                      </div>

                                      <div class="row justify-content-center">
                                        <div class="col text-center p-4"> 
                                          <%= f.submit "Ingresar", class:"btn btn-primary mb-3" %>
                                        </div>  
                                      </div>
                                </div>      
                              <% end %>
                </div>              
    </div>
    <div class="col-md-4">
    
    </div>        
  </div>    