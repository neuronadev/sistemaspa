            <div class="dropdown">
              <ul class="dropdown__list">
                
                <li class="dropdown__list-item">
                   <%= link_to destroy_usuario_session_path do %>
                        <span class="dropdown__icon"><i class="fas fa-sign-out-alt"></i></span>
                        <span class="dropdown__title">Salir</span>
                   <% end %>     
                </li>
              </ul>
            </div>
            
         </div>
       
    </header>
