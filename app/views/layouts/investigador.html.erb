<!DOCTYPE html>
<html>
  <head>
    <title>INECOL::Sistema de Producción Académica</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
     <script src="https://kit.fontawesome.com/00934c45cc.js" data-mutate-approach="sync"></script>      
    
  </head>

  <body class="" >
     <div class="container-fluid vh-100">          
          <%= render "layouts/header" %>
          <div class="row w-100 p-2">
              <div class="col-2 d-flex justify-content-end">
                   <%= render "layouts/menu_inv" %>
              </div>
              <div class="col-10 d-flex align-items-start">
                    <div class="row  w-100 d-flex align-items-start shadow-lg p-3 mb-5 bg-body rounded-3" style="min-height: 90vh">
                                <%= yield %>
                    </div>
                    
              </div>
             
          </div>    
  </body>
</html>