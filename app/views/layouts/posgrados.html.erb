<!DOCTYPE html>
<html>
  <head>
    <title>INECOL::Sistema de Producción Académica</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
    <script src="https://kit.fontawesome.com/00934c45cc.js" data-mutate-approach="sync"></script>      
          
  </head>

  <body>
     
            <nav class="navbar navbar-expand-lg light " style="background-color: #e3f2fd;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon">Menu</span>
                </button>
                <div class="collapse navbar-collapse p-2" id="navbarText">
                       <ul class="navbar-nav">
                            <li class="nav-item active border-2 border-end">
                                <%= link_to posgrados_path, class:"nav-link", data: { turbolinks: false } do %>
                                     <i class="fas fa-list-ul"></i> Inicio <span class="sr-only">(current)</span>
                                <% end %>
                            </li>
                            
                            <% if current_usuario.persona_id != 66 %>
                                <li class="nav-item active border-2 border-end">
                                    <%= link_to new_posgrado_path(:tipo=>'C'), class:"nav-link" do %>
                                            <i class="fas fa-chalkboard-teacher"></i> Registrar Curso
                                    <% end %>
                                </li>
                                <li class="nav-item active border-2 border-end">
                                    <%= link_to new_posgrado_path(:tipo=>'T'), class:"nav-link" do %>
                                            <i class="fas fa-file-invoice"></i> Registrar Tesis
                                    <% end %>
                                </li>
                            <% end  %>
                            <li class="nav-item dropdown border-2 border-end">
                               <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                   <i class="fa-solid fa-clock-rotate-left"></i> Históricos
                               </a>
                               <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                         <%= link_to posgrados_path(:p=>2023), class:"dropdown-item", data: { turbolinks: false } do %>
                                            <i class="fa-regular fa-calendar"></i> Captura 2023
                                         <% end %>
                                   </li>
                                    <li>
                                         <%= link_to posgrados_path(:p=>2022), class:"dropdown-item", data: { turbolinks: false } do %>
                                            <i class="fa-regular fa-calendar"></i> Captura 2022
                                         <% end %>
                                   </li>
                                   <li>
                                         <%= link_to posgrados_path(:p=>2021), class:"dropdown-item", data: { turbolinks: false } do %>
                                            <i class="fa-regular fa-calendar"></i> Captura 2021
                                         <% end %>
                                   </li>
                               </ul>
                            </li>
                            <li class="nav-item active ">
                                <%= link_to destroy_usuario_session_path, class:"nav-link" do %>
                                     <i class="fas fa-sign-out-alt"></i> Salir <span class="sr-only">(current)</span>
                                <% end %>
                            </li>
                       </ul> 
 
                </div> 
                
            </nav>
         
        
      <div class="container pt-md-4 pl-md-4">
           <%= yield %>
      </div>
     
  </body>
</html>
<script type = "text/javascript" >
      history.pushState(null,null);
      window.addEventListener('popstate', function() {
          history.pushState(null,null); });
</script>
