<!DOCTYPE html>
<html>
  <head>
    <title>INECOL::Sistema de Producción Académica</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'sesion', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    
  </head>

  <body class="bg-light">
    <div class="grid">
         <header class="header"></header>
        <aside class="sidenav position-fixed">
            
           <div class="w-50 mx-auto mb-md-3">
              <%= image_pack_tag 'logo100_White.png', class:"card-img-top img-fluid" %>
           </div> 
           <div class="row row--align-v-center row--align-h-center">
                        <%= render "navs/validacion" %>
           </div>
        </aside>

        <main class="main">   
                
                <div class="container-fluid">
                    <%= yield %>
                </div>    
        </main>
    </div> 

  </body>
</html>
