<!DOCTYPE html>
<html>
  <head>
    <title>INECOL::Sistema de Producción Académica</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
     <script src="https://kit.fontawesome.com/00934c45cc.js" data-mutate-approach="sync"></script>      
    
  </head>

  <body class="bgbody">
       <%= render "layouts/header" %>      

       <div class="container-fluid" >          
          <div class="row w-100 p-2">
              <div class="col-2 d-flex justify-content-center">
                   <%= render "layouts/menu_tec" %>
              </div>
              <div class="col-10 d-flex align-items-start">
                    <div class="row  w-100 d-flex align-items-start  p-3 mb-5 bg-body rounded-3">
                           <%= yield %>
                    </div>
                    
              </div>
          </div>    
       </div>    
  </body>
</html>