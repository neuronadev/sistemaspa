<!DOCTYPE html>
<html>
  <head>
    <title>INECOL::Sistema de Producción Académica</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'sesion', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
          
  </head>

  <body>
      <div class="container-fluid">
            <nav class="navbar navbar-expand-lg light " style="background-color: #e3f2fd;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon">Menu</span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                       <ul class="navbar-nav">
                          <% if current_usuario.evaluador == 'V' %>
                                 <li class="nav-item active">
                                    <%= link_to divulgaciones_path, class:"nav-link" do %>
                                        <i class="fas fa-list-ul"></i> Inicio <span class="sr-only">(current)</span>
                                    <% end %>
                                </li>
                                 <li class="nav-item active">
                                    <%= link_to destroy_usuario_session_path, class:"nav-link" do %>
                                        <i class="fas fa-sign-out-alt"></i> Salir <span class="sr-only">(current)</span>
                                    <% end %>
                                </li>
                          <% else %>
                                <li class="nav-item active">
                                    <%= link_to divulgaciones_path, class:"nav-link" do %>
                                        <i class="fas fa-list-ul"></i> Inicio <span class="sr-only">(current)</span>
                                    <% end %>
                                </li>
                                <li class="nav-item active">
                                    <%= link_to new_divulgacion_path(:tipo=>'ADP'), class:"nav-link" do %>
                                            <i class="fas fa-newspaper"></i> Artículo en periódico
                                    <% end %>
                                </li>
                                <li class="nav-item active">
                                    <%= link_to new_divulgacion_path(:tipo=>'CASA'), class:"nav-link" do %>
                                            <i class="fas fa-users"></i> Actividad institucional
                                    <% end %>
                                </li>
                                <li class="nav-item active">
                                    <%= link_to destroy_usuario_session_path, class:"nav-link" do %>
                                        <i class="fas fa-sign-out-alt"></i> Salir <span class="sr-only">(current)</span>
                                    <% end %>
                                </li>
                          <% end %>

                           
                       </ul> 
 
                </div> 
                <div class="col-6">
                    <%= form_with url: buscar_divulgaciones_path, local:true, method: :post do |form| %>
                        <div class="form-row">
                           <div class="col-10">
                               <%= form.text_field :query, class:"form-control", style:'width:100%;' %>
                           </div> 
                           <div class="col-2">
                              <button type="submit" class="btn btn-success ">Buscar</button>
                           </div>                
                       </div> 
                    <% end %> 
               </div>    
            </nav>
      </div>     
        
      <div class="container-fluid pt-md-4 pl-md-4">
           <%= yield %>
      </div>
     
  </body>
</html>