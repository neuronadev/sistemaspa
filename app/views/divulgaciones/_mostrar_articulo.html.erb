<div class="row mb-md-2">
    <div class="col-md-1">
        <%= link_to divulgaciones_path do %>
            <i class="fas fa-long-arrow-alt-left"></i> Regresar
        <% end%>
    </div>  
    <div class="col-md-2">
        <%= link_to edit_divulgacion_path(@actividad.id) do %>
        <i class="fas fa-edit"></i> Editar
    <% end%>
    
    </div>  
</div>

<div class="card">            
   <div class="card-body">        
            

            <div class="col">
                <strong>Titulo:</strong> <%= @actividad.titulo %>
            </div>
            <div class="col mt-md-2">
                <strong>Fecha de publicación:</strong> <%= @actividad.articulo.fechapub %>
            </div>

            <div class="col  mt-md-2">
                <strong>Sección/Página:</strong> <%= @actividad.articulo.volumen %>
            </div>
            <div class="col  mt-md-2">
                <strong>Medio de publicación:</strong> <%= @actividad.articulo.revista.nomrevista %>
            </div>

            <div class="row pl-md-3 pt-md-2">
                   <div class="col comprobante">Comprobante</div>
            </div>
            <div class="col-md-6 pl-md-1 pt-md-1">
                <div class="col">
                                    <% if @actividad.enlacedoc.attached? %>
                                    
                                            <div class="col-6">  <%= link_to @actividad.enlacedoc.filename, rails_blob_path(@actividad.enlacedoc, disposition: 'attachment', target: '_blank') %> </div>
                                    <% else %>
                                            <I>Sin comprobante</I>
                                    <% end %>  
                </div>        
            </div>  

            <div clas="row mt-md-3">
              <div class="col">  
                    <table class="table mt-md-3">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Participación</th>
                                

                            </tr>   
                        </thead>
                        <tbody>
                                <% @actividad.autores.order(:id).each do |a| %>
                                    <tr>
                                    <td> 
                                        <% if a.firma.present? %> 
                                            <%= a.firma %> 
                                        <% else %>
                                            <%= (a.persona.paterno||'') + " " + (a.persona.materno||'') + " " + (a.persona.nombre||'') %> 
                                        <% end %>
                                    </td>
                                    <td> <%= a.rol.nomrol %> </td>
                                    
                                    </tr>   
                                
                                <% end %>
                        </tbody>
                    </table>
                </div>    
            </div>
  </div>           
</div>            