             $.ajax({
                    url: '<%= listapred_path %>',
                    data: "redid=" +  $("#red_id").val(),
                    type: "post",
                    success: function(data){ 
                        $("#persona").html(data);
                    },
                    error: function(dayta){   }
               })
}

function consultar(){
              $.ajax({
                    url: '<%= ediproductos_path %>',
